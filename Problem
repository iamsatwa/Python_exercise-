def my_prob(value):
    a = []
    n=value
    v=0
    p=0
    while n >0:
        for i in range(value,0,-1):
         #print(i, end='')
            a.append(str(i))
    #print(a)
        if v > 0:
            for rec in range(0, v+1):
                a[rec] = a[p]
            print(' '.join(a))
        else:
            print(' '.join(a))
        v = v + 1
        p = v
        #print()
        a = []
        n = n-1
        
value = int(input("enter the value = "))
my_prob(value)

